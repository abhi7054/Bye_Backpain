<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#f4f4f4">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="123dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#007e86"
        android:id="@+id/greenback"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:id="@+id/exerciseTitleTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="27.5dp"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:id="@+id/subtitleTextView"
        app:layout_constraintTop_toBottomOf="@id/exerciseTitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_semibold"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/greenback"
        android:background="#f4f4f4"
        android:layout_height="550dp">

    <ImageView
        android:layout_width="328.5dp"
        android:layout_height="148dp"
        android:layout_marginTop="7.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/lower_tummy"
        android:id="@+id/mainimage"
        />

    <TextView
        android:layout_width="344.5dp"
        android:layout_height="200dp"
        android:textColor="#222121"
        android:textSize="12.5sp"
        android:fontFamily="@font/poppins_regular"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@+id/mainimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15.5dp"
        android:id="@+id/description"
        android:gravity="start"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="81.5dp"
            android:background="#f4f4f4"
            android:id="@+id/horizontalScrollView"
            app:layout_constraintTop_toBottomOf="@id/description"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f4f4f4">

                <ImageView
                    android:id="@+id/lowerTummyImageView"
                    android:padding="5dp"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/lower_tummy"
                    android:background="@drawable/rectangle"
                    />
                <ImageView
                    android:padding="5dp"
                    android:id="@+id/abdominalStrengthImageView"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/deep_abdominal"
                    android:background="@drawable/rectangle"/>
                <ImageView
                    android:id="@+id/bridgeImageView"
                    android:padding="5dp"
                    android:layout_width="175dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/bridge"
                    android:background="@drawable/rectangle"/>
                <ImageView
                    android:id="@+id/piriformisImageView"
                    android:padding="5dp"
                    android:layout_width="175dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/piri"
                    android:background="@drawable/rectangle"/>
                <ImageView
                    android:id="@+id/catCowImageView"
                    android:layout_width="175dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/catcow"
                    android:background="@drawable/rectangle"/>
                <ImageView
                    android:id="@+id/shoulderRollImageView"
                    android:layout_width="175dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/shoulder"
                    android:background="@drawable/rectangle"/>
                <ImageView
                    android:id="@+id/overHeadArmReachImageView"
                    android:layout_width="175dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/overhead_arm_reach_1"
                    android:background="@drawable/rectangle"/>
                <ImageView
                    android:id="@+id/postOpImageView"
                    android:layout_width="175dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/lower_back2"
                    android:background="@drawable/rectangle"/>
            </LinearLayout>


        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#007e86"

        />
    <Button
        android:layout_width="61.5dp"
        android:layout_height="37dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/backarrow"
        android:id="@+id/backarrow"
        />
    <Button
        android:layout_width="61.5dp"
        android:layout_height="37dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/frontarrow"
        android:id="@+id/frontarrow"

        />

</androidx.constraintlayout.widget.ConstraintLayout>